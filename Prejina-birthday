<script>
function nextPage(page){
  document.querySelectorAll("section").forEach(s=>s.style.display="none");
  document.getElementById("p"+page).style.display="flex";
}

// Floating hearts/balloons after candle is blown
let floatingActive=false;
function createFloat(){
  if(!floatingActive) return;
  const el=document.createElement("div");
  el.className="float";
  el.innerHTML=Math.random()<0.5?"ğŸ’—":"ğŸˆ";
  el.style.left=Math.random()*100+"vw";
  el.style.animationDuration=(Math.random()*3+3)+"s";
  document.body.appendChild(el);
  setTimeout(()=>el.remove(),6000);
}

// Blow candle function
function blowCandle(){
  document.getElementById("flame").style.display="none";
  floatingActive=true; // start floating hearts/balloons

  // confetti burst
  for(let i=0;i<30;i++){
    const c=document.createElement("div");
    c.className="float";
    c.innerHTML=Math.random()<0.5?"ğŸ‰":"âœ¨";
    c.style.left=Math.random()*100+"vw";
    c.style.fontSize=(Math.random()*15+20)+"px";
    document.body.appendChild(c);
    setTimeout(()=>c.remove(),4000);
  }
}

setInterval(createFloat,500);
</script>

